<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:onClick="touchEvent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.example.astrolabe.AngleMeasurement"
    android:orientation="vertical">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/text_size_angle_title"
		android:text="@string/angle_title"
		/>"
	<TextView
		android:id="@+id/angle_display_measure"
		android:textSize="@dimen/text_size_angle_display"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		/>
</LinearLayout>